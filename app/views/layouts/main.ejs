<!DOCTYPE html>
<html>
<head>
    <title><%= title %> - Loan Management</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="/css/customer.css">
    <link rel="stylesheet" href="/css/new-customer.css">
</head>
<body>
    <div class="dashboard-container">
        <div class="sidebar">
            <div class="brand">
                <h2>Loan Management</h2>
            </div>
            <div class="nav-item <%= currentPage === 'dashboard' ? 'active' : '' %>">
                <a href="/">
                    <i class="fas fa-home"></i>
                    Dashboard
                </a>
            </div>
            <div class="nav-item <%= currentPage === 'customers' ? 'active' : '' %>">
                <a href="/customers">
                    <i class="fas fa-users"></i>
                    Customers
                </a>
            </div>
            <div class="nav-item <%= currentPage === 'loans' ? 'active' : '' %>">
                <a href="/loans">
                    <i class="fas fa-money-bill-wave"></i>
                    Loans
                </a>
            </div>
            <div class="nav-item <%= currentPage === 'reports' ? 'active' : '' %>">
                <a href="/reports">
                    <i class="fas fa-chart-bar"></i>
                    Reports
                </a>
            </div>
            <div class="nav-item <%= currentPage === 'settings' ? 'active' : '' %>">
                <a href="/settings">
                    <i class="fas fa-cog"></i>
                    Settings
                </a>
            </div>
        </div>
        <div class="main-content">
            <div id="content-area">
                <%- body %>
            </div>
        </div>
    </div>

    <script src="/js/dashboard.js"></script>
</body>
</html>