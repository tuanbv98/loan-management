<div class="header">
    <h1>Tạo mới khoản vay</h1>
</div>

<div class="content-wrapper">
    <!-- Loan Form -->
    <div class="loan-form-container">
        <form class="loan-form" action="/loans/create" method="POST">
            <div class="form-grid">
                <!-- Left Column -->
                <div class="form-section">
                    <h3>Thông tin khoản vay</h3>
                    <div class="form-group">
                        <label>Khách hàng</label>
                        <div class="input-group">
                            <select class="filter-dropdown" name="user_id">
                                <option value=""></option>
                                <% customers.forEach((customer, index) => { %>
                                    <option value="<%= customer.id %>"><%= customer.full_name %></option>
                                <% }); %>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Số tiền vay</label>
                        <div class="input-group">
                            <input type="number"
                                   id="amount"
                                   placeholder="Nhập số tiền"
                                   name="amount"
                                   onchange="calculateLoan()">
                            <div class="input-suffix">VNĐ</div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Lãi suất</label>
                        <div class="input-group">
                            <input type="number"
                                   id="interest_rate"
                                   step="0.1"
                                   value="0.4"
                                   name="interest_rate"
                                   placeholder="Nhập lãi suất"
                                   readonly>
                            <div class="input-suffix">%</div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label>Thời hạn vay</label>
                            <div class="input-group">
                                <input type="number"
                                       id="duration"
                                       value="40"
                                       name="duration"
                                       readonly>
                                <div class="input-suffix">Ngày</div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Ngày giải ngân</label>
                            <input type="date"
                                   id="start_date"
                                   readonly
                                   class="date-input">
                        </div>
                    </div>
                </div>

                <!-- Right Column -->
                <div class="form-section">
                    <h3>Chi tiết thanh toán</h3>
                    <div class="loan-summary">
                        <div class="summary-item">
                            <div class="summary-label">
                                <i class="fas fa-money-bill-wave"></i>
                                Tổng tiền phải trả
                            </div>
                            <div class="summary-value" id="total_amount">0 VNĐ</div>
                        </div>

                        <div class="summary-item">
                            <div class="summary-label">
                                <i class="fas fa-percentage"></i>
                                Số tiền nhận lại
                            </div>
                            <div class="summary-value" id="interest_amount">0 VNĐ</div>
                        </div>

                        <div class="summary-item">
                            <div class="summary-label">
                                <i class="fas fa-calendar-day"></i>
                                Tiền trả mỗi ngày
                            </div>
                            <div class="summary-value" id="daily_payment">0 VNĐ</div>
                        </div>

                        <div class="summary-item">
                            <div class="summary-label">
                                <i class="fas fa-calendar-check"></i>
                                Ngày đáo hạn
                            </div>
                            <div class="summary-value" id="due_date">--/--/----</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="form-actions">
                <button type="button" class="btn btn-secondary" onclick="window.history.back()">
                    <i class="fas fa-times"></i> Hủy
                </button>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-check"></i> Tạo khoản vay
                </button>
            </div>
        </form>
    </div>
</div>
