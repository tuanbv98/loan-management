<div class="">
    <div class="header">
        <h1>Thông tin tài khoản</h1>
    </div>

    <% if (errors.length > 0) { %>
        <% errors.forEach(error => { %>
            <div class="error-message" id="error-message">
                <%= error.msg %>
            </div>
        <% }) %>
    <% } %>

    <form id="createUserForm" action="/accounts/edit" method="POST" style="margin-top: 15px;">
        <div class="form-group">
            <label for="full_name">Họ và tên</label>
            <input type="text" id="full_name" name="full_name" class="form-control" value="<%= account.full_name || '' %>" readonly style="background: #e0e0e0">
        </div>

        <div class="form-group">
            <label for="user_name">Tên đăng nhập<span class="required">*</span></label>
            <input type="text" id="user_name" name="user_name" class="form-control" required value="<%= account.user_name || '' %>" readonly style="background: #e0e0e0">
        </div>

        <div class="form-group">
            <label for="email">Email<span class="required">*</span></label>
            <input type="email" id="email" name="email" class="form-control" required value="<%= account.email || '' %>" readonly style="background: #e0e0e0">
        </div>

        <div class="form-group">
            <label>Quyền hạn<span class="required">*</span></label>
            <select class="filter-dropdown" name="status">
                <option value="active" <%= account.role == 'admin' ? 'selected' : '' %>>Quản trị viên</option>
                <option value="inactive" <%= account.role == 'user' ? 'selected' : '' %>>Người dùng</option>
            </select>
        </div>

        <div class="form-group">
            <label>Trạng thái<span class="required">*</span></label>
            <select class="filter-dropdown" name="status">
                <option value="active" <%= account.status == 'active' ? 'selected' : '' %>>Đang hoạt động</option>
                <option value="inactive" <%= account.status == 'inactive' ? 'selected' : '' %>>Không hoạt động</option>
            </select>
        </div>

        <div class="button-group" style="width: 50%; float: right;">
            <button type="submit" class="btn btn-primary">Cập nhật</button>
            <button type="button" class="btn btn-secondary" onclick="window.history.back()" style="width: 45%;">Hủy</button>
        </div>
    </form>
</div>